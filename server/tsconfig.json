{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}